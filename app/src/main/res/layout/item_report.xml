<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_report"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/d8"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/d16"
    android:paddingRight="@dimen/d16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_event_kind"
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="事件类型：核查任务"
            android:textColor="@color/color_text_important"
            android:textSize="@dimen/s14" />

        <TextView
            android:id="@+id/tv_event_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="待处理"
            />
    </LinearLayout>

    <include layout="@layout/include_item_event" />
</LinearLayout>