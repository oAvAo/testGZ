<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head_view1" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_my_report"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/base_background">


        <android.support.design.widget.TabLayout
            android:id="@+id/tl_my_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            app:tabBackground="@color/color_white"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/base_theme"
            app:tabIndicatorHeight="@dimen/d2"
            app:tabMode="fixed"
            app:tabPadding="@dimen/d5"
            app:tabSelectedTextColor="@color/base_theme"
            app:tabTextColor="@color/color_text_content" />
    </android.support.v4.view.ViewPager>


</LinearLayout>